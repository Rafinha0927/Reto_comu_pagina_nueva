# 
#  CLOUDFRONT (Producci贸n)
# 
# Habilitar CloudFront CDN (true en producci贸n, false en desarrollo)
VITE_USE_CLOUDFRONT=false

# URL base de CloudFront (ej: https://d123abc456.cloudfront.net)
# Obten esto en AWS CloudFront Console > Distributions > Domain Name
VITE_CLOUDFRONT_URL=https://dXXXXXX.cloudfront.net

# Ruta a la nube de puntos en S3 (relativa a CloudFront)
VITE_POINTCLOUD_PATH=/pointclouds

# Nombre del archivo de nube de puntos
VITE_POINTCLOUD_FILENAME=cloud.laz

# 
#  API y WebSocket (Backend)
# 
# URL de la API backend
VITE_API_URL=http://localhost:3000

# URL del WebSocket (para actualizaciones en tiempo real)
VITE_WS_URL=ws://localhost:3000

# 
#  AWS Credenciales (Solo para scripts locales)
# 
# NO guardar credenciales en .env!
# Usar en terminal: $env:AWS_ACCESS_KEY_ID = "..."
# O configurar en ~/.aws/credentials

# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=mi-nube-puntos
# AWS_CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC

# 
# 锔 Configuraci贸n de Desarrollo
# 
# Puerto del servidor de desarrollo
VITE_PORT=5173

# Host del servidor
VITE_HOST=localhost

# Debug mode
VITE_DEBUG=false

# 
#  Configuraci贸n de Producci贸n (.env.production)
# 
# Copiar a .env.production y configurar:
# 
# VITE_USE_CLOUDFRONT=true
# VITE_CLOUDFRONT_URL=https://d123abc456.cloudfront.net
# VITE_API_URL=https://api.tudominio.com
# VITE_WS_URL=wss://api.tudominio.com/ws
# VITE_DEBUG=false

# 
#  Notas
# 
# 
# 1. Variables con prefijo VITE_ son accesibles desde el navegador
# 2. NO incluir secretos o tokens en archivos sin prefijo
# 3. .env.local tiene prioridad sobre .env
# 4. .env.production se usa cuando: npm run build && npm run preview
# 5. Variables de AWS se debe configurar en variables de entorno del SO
#    o en ~/.aws/credentials para AWS CLI
#
# Proceso de carga:
# - Desarrollo: .env + .env.local (si existe)
# - Producci贸n: .env.production + .env.local (si existe)
